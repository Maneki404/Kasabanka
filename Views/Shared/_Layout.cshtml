<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KasaBanka</title>
    <link href="~/library/datatables/css/datatables.css" rel="stylesheet" />
    <link href="~/library/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar {
            background-color: #36030b;
        }
    </style>
</head>
<body class="d-flex flex-column vh-100">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("KasaBanka", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Bankalar", "Index", "Bank", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Kasalar", "Index", "Safe", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("İşlemler", "Index", "Transactions", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content d-flex flex-column flex-grow-1">
        @RenderBody()
        <div class="d-flex flex-grow-1"></div>
        <div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Made with ❤ by Aslı</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/library/datatables/js/datatables.js"></script>
    <script src="~/library/sweetalert/sweetalert2.all.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
