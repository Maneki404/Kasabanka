@{
    ViewBag.Title = "Kasa";
}

@model List<Kasabanka.Models.Safe>

<style>
    /* Ensure all columns are left-aligned */
    #safeTable th,
    #safeTable td {
        text-align: left;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Kasalar</h2>
    <button class="btn btn-primary" type="button" title="Yeni kasa eklemek için tıklayınız." onclick="OpenAddSafeModal()">Yeni Kasa Oluştur</button>
</div>

<table id="safeTable" class="table table-striped table-bordered display">
    <thead>
        <tr>
            <th>Kasa Kodu</th>
            <th>Kasa Adı</th>
            <th>TL (₺)</th>
            <th>USD ($)</th>
            <th>EUR (€)</th>
            <th>GBP (£)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div id="addSafeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Yeni Kasa Oluştur</h4>
            </div>
            <form id="addSafeForm">
                <div class="modal-body">
                    <input type="hidden" id="safeIdInput" />
                    <label>Kasa Kodu</label>
                    <input class="form-control mb-2" name="safeCodeInput" id="safeCodeInput" placeholder="Kasa kodunu giriniz" required />
                    <label>Kasa Adı</label>
                    <input class="form-control mb-2" id="safeNameInput" placeholder="Kasa adını giriniz" required />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-default" onclick="CloseAddModal()">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="updateSafeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kasa Güncelleme</h4>
            </div>
            <form id="updateSafeForm">
                <div class="modal-body">
                    <input type="hidden" id="safeIdUpdateInput" />
                    <label>Kasa Kodu</label>
                    <input class="form-control mb-2" name="safeCodeUpdateInput" id="safeCodeUpdateInput" placeholder="Kasa kodunu giriniz" required />
                    <label>Kasa Adı</label>
                    <input class="form-control mb-2" id="safeNameUpdateInput" placeholder="Kasa adını giriniz" required />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-default" onclick="CloseUpdateModal()">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="deleteSafeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kasa Silinecektir Onaylıyor Musunuz?</h4>
            </div>
            <form id="deleteSafeForm">
                <div class="modal-body">
                    <input type="hidden" id="safeIdDeleteInput" />
                    <button type="submit" class="btn btn-danger">Evet</button>
                    <button type="button" class="btn btn-outline-dark" onclick="CloseDeleteModal()">Hayır</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var table;

        $(function () {
            InitializeTable();
        });

        function GetAmounts(currency, safeId, callback) {
            $.ajax({
                type: "GET",
                url: "/Transactions/GetAmountsByCurrency",
                data: { currency: currency, safeId: safeId, isBank: false },
                success: function (data) {
                    var totalAmount = 0;

                    $.each(data.data, function (index, amount) {
                        totalAmount += amount;
                    });

                    totalAmount = totalAmount.toFixed(2) + " " + currencySymbol(currency);

                    callback(totalAmount);
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching transactions.");
                    console.error("Response:", xhr.responseText);
                    callback("0.00 " + currencySymbol(currency)); // Default to zero in case of an error
                }
            });
        }

        function currencySymbol(currency) {
            switch (currency) {
                case "TL": return "₺";
                case "USD": return "$";
                case "EUR": return "€";
                case "GBP": return "£";
                default: return "";
            }
        }

        function InitializeTable() {
            table = new DataTable('#safeTable', {
                ajax: {
                    url: '/Safe/GetSafes',
                    dataSrc: function (json) {
                        setTimeout(() => {
                            table.rows().every(function () {
                                var row = this;
                                var safeId = row.data().Id;
                                UpdateCurrencyColumns(row, safeId);
                            });
                        }, 1000);
                        return json.data;
                    }
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/tr.json',
                },
                columns: [
                    { data: 'Code' },
                    { data: 'Name' },
                    { data: null, defaultContent: "Loading...", className: "tl-amount" },
                    { data: null, defaultContent: "Loading...", className: "usd-amount" },
                    { data: null, defaultContent: "Loading...", className: "eur-amount" },
                    { data: null, defaultContent: "Loading...", className: "gbp-amount" },
                    {
                        data: null,
                        render: function (data, type, row) {
                            var deleteButton = `<button type="button" title="Kasayı silmek için tıkla." onclick="OpenDeleteSafeModal(${row.Id})" class="m-1 btn btn-sm btn-danger">Sil</button>`;
                            var updateButton = `<button type="button" title="Kasayı düzenlemek için tıkla." onclick="OpenUpdateSafeModal(${row.Id})" class="m-1 btn btn-sm btn-info">Düzenle</button>`;
                            return updateButton + deleteButton;
                        }
                    },
                ]
            });
        }

        function UpdateCurrencyColumns(row, safeId) {
            if (!row) {
                console.warn("Row not found for safeId:", safeId);
                return;
            }

            var rowNode = $(row.node());

            GetAmounts("TL", safeId, function (amount) {
                rowNode.find(".tl-amount").html(amount);
            });
            GetAmounts("USD", safeId, function (amount) {
                rowNode.find(".usd-amount").html(amount);
            });
            GetAmounts("EUR", safeId, function (amount) {
                rowNode.find(".eur-amount").html(amount);
            });
            GetAmounts("GBP", safeId, function (amount) {
                rowNode.find(".gbp-amount").html(amount);
            });
        }

        function OpenAddSafeModal() {
            $("#safeNameInput").val("");
            $("#safeCodeInput").val("");
            $("#addSafeModal").modal("show");
        }

        function CloseAddModal() {
            $("#addSafeModal").modal("hide");
        }

        $("#addSafeForm").on("submit", function (event) {
            event.preventDefault();
            SaveNewSafe();
        });

        function SaveNewSafe() {
            var object = {
                Name: $("#safeNameInput").val(),
                Code: $("#safeCodeInput").val(),
            }

            $.ajax({
                type: "POST",
                url: "/Safe/CreateSafe",
                data: object,
                success: function (data) {
                    CloseAddModal();
                    if (data.Success) {
                        Swal.fire({
                            title: "Başarılı!",
                            text: data.Message,
                            icon: "success"
                        }).then(() => {
                            table.ajax.reload();
                        });
                    }
                    else {
                        Swal.fire({
                            title: "Uyarı!",
                            text: data.Message,
                            icon: "warning"
                        });
                    }
                },
                error: function () {
                    CloseAddModal();
                    Swal.fire({
                        title: "Hata!",
                        text: "Beklenmeyen bir hata oluştu.",
                        icon: "error"
                    });
                }
            });
        }

        function OpenUpdateSafeModal(id) {
            $.ajax({
                type: "GET",
                url: "/Safe/GetSafeById",
                data: { id: id },
                success: function (data) {
                    if (data) {
                        $("#safeIdUpdateInput").val(data.Id);
                        $("#safeNameUpdateInput").val(data.Name);
                        $("#safeCodeUpdateInput").val(data.Code);
                        $("#updateSafeModal").modal("show");
                    } else {
                        Swal.fire({
                            title: "Hata!",
                            text: "Kasa bilgisi alınamadı.",
                            icon: "error"
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        title: "Hata!",
                        text: "Beklenmeyen bir hata oluştu.",
                        icon: "error"
                    });
                }
            });
        }

        function CloseUpdateModal() {
            $("#updateSafeModal").modal("hide");
        }

        $("#updateSafeForm").on("submit", function (event) {
            event.preventDefault();
            UpdateSafe();
        });

        function UpdateSafe() {
            var object = {
                Id: $("#safeIdUpdateInput").val(),
                Name: $("#safeNameUpdateInput").val(),
                Code: $("#safeCodeUpdateInput").val(),
            }

            $.ajax({
                type: "POST",
                url: "/Safe/UpdateSafe",
                data: object,
                success: function (data) {
                    CloseUpdateModal();
                    if (data.Success) {
                        Swal.fire({
                            title: "Başarılı!",
                            text: data.Message,
                            icon: "success"
                        }).then(() => {
                            table.ajax.reload();
                        });
                    }
                    else {
                        Swal.fire({
                            title: "Uyarı!",
                            text: data.Message,
                            icon: "warning"
                        });
                    }
                },
                error: function () {
                    CloseUpdateModal();
                    Swal.fire({
                        title: "Hata!",
                        text: "Beklenmeyen bir hata oluştu.",
                        icon: "error"
                    });
                }
            });
        }

        function OpenDeleteSafeModal(id) {
            $.ajax({
                type: "GET",
                url: "/Safe/GetSafeById",
                data: { id: id },
                success: function (data) {
                    if (data) {
                        $("#safeIdDeleteInput").val(data.Id);
                        $("#deleteSafeModal").modal("show");
                    } else {
                        Swal.fire({
                            title: "Hata!",
                            text: "Kasa bilgisi alınamadı.",
                            icon: "error"
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        title: "Hata!",
                        text: "Beklenmeyen bir hata oluştu.",
                        icon: "error"
                    });
                }
            });
        }

        function CloseDeleteModal() {
            $("#deleteSafeModal").modal("hide");
        }

        $("#deleteSafeForm").on("submit", function (event) {
            event.preventDefault();
            DeleteSafe($("#safeIdDeleteInput").val());
        });

        function DeleteSafe(id) {
            $.ajax({
                type: "POST",
                url: "/Safe/DeleteSafe",
                data: { id: id },
                success: function (data) {
                    CloseDeleteModal();
                    if (data.Success) {
                        Swal.fire({
                            title: "Başarılı!",
                            text: data.Message,
                            icon: "success"
                        }).then(() => {
                            table.ajax.reload();
                        });
                    }
                    else {
                        Swal.fire({
                            title: "Uyarı!",
                            text: data.Message,
                            icon: "warning"
                        });
                    }
                },
                error: function () {
                    CloseDeleteModal();
                    Swal.fire({
                        title: "Hata!",
                        text: "Beklenmeyen bir hata oluştu.",
                        icon: "error"
                    });
                }
            });
        }
    </script>
}
